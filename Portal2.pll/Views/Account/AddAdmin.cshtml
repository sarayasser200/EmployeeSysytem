@model Portal2.BLL.ModelVM.EmployeeVM.RegisterUserVM

@{
    ViewData["Title"] = "AddAdmin";
}

<!-- Fullscreen container with a gradient background -->
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: linear-gradient(to bottom, #00c6ff, #0072ff);">

    <!-- Form container with a card layout and shadow -->
    <div class="card shadow-lg border-0" style="width: 400px; border-radius: 15px; background-color: white;">

        <!-- Form header with a title -->
        <div class="text-center mt-4">
            <h2 class="fw-bold" style="color: #003366;">Create Admin Account</h2>
        </div>

        <!-- Form body with inputs -->
        <div class="card-body px-4 py-4">
            <form asp-action="AddAdmin">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Username -->
                <div class="form-group mb-3">
                    <input asp-for="UserName" placeholder="Username" class="form-control form-control-lg border-0 shadow-sm" style="background: #f8f9fa; height: 40px;" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group mb-3">
                    <input asp-for="Password" placeholder="Password" type="password" class="form-control form-control-lg border-0 shadow-sm" style="background: #f8f9fa; height: 40px;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-group mb-3">
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" class="form-control form-control-lg border-0 shadow-sm" style="background: #f8f9fa; height: 40px;" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="form-group mb-3">
                    <input asp-for="Address" placeholder="Address" class="form-control form-control-lg border-0 shadow-sm" style="background: #f8f9fa; height: 40px;" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group mb-4">
                    <input asp-for="Email" placeholder="Email" type="email" class="form-control form-control-lg border-0 shadow-sm" style="background: #f8f9fa; height: 40px;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <div class="text-center">
                    <input type="submit" value="Create Admin" class="btn btn-lg text-white fw-bold px-5 py-2" style="background: linear-gradient(to right, #00c6ff, #0072ff); border-radius: 30px;" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
